<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/backgroundclr"

    xmlns:android="http://schemas.android.com/apk/res/android">



    <EditText
        android:id="@+id/name"
        android:drawableLeft="@drawable/username"
        android:layout_margin="5dp"
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/add"
        android:drawableLeft="@drawable/ic_baseline_add_location"
        android:layout_margin="5dp"
        android:hint="Enter your address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/phn"
        android:drawableLeft="@drawable/phnno"
        android:layout_margin="5dp"
        android:hint="Enter your Phone Number"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/mailid"
        android:hint="Enter your mailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/user"
        android:drawableLeft="@drawable/usernamee"
        android:hint="Enter your username"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/pass"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/password"
        android:hint="Enter you password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/con"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/lock"
        android:hint="Enter your password again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reg"
        android:layout_margin="5dp"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_margin="5dp"
        android:background="@drawable/buttonstyle"
        android:text="Go back to Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>